{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <br>
    <div class="row">
        <button type="button" class="btn btn-outline-success">Crear</button>
    </div>
    <div class="row row-cols-3 row-cols-md-4 g-4">
        {% for note in notes %}
        <div class="col">
            <div class="card text-bg-{{ note.color }} my-2 h-100" style="width: 18rem;">
                <div class="card-header d-flex justify-content-between">{{ note.title }}<button type="button" class="btn-close" aria-label="Close"></button></div>
                <div class="card-body">
                    <p class="card-text align-top">{{ note.content}}</p>
                    <small class="text-body-secondary align-bottom">Last updated 3 mins ago</small>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}
